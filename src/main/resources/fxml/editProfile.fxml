<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<VBox spacing="18"
      alignment="TOP_CENTER"
      prefWidth="520"
      xmlns="http://javafx.com/javafx/23"
      xmlns:fx="http://javafx.com/fxml/1"
      fx:controller="files.Controllers.EditProfileController"
      stylesheets="@../css/edit-profile.css">

    <padding>
        <Insets top="20" left="25" right="25" bottom="20"/>
    </padding>

    <Label text="Edit Profile" styleClass="title"/>

    <VBox spacing="6">
        <Label text="Student ID"/>
        <TextField fx:id="idField" editable="false"/>
    </VBox>

    <VBox spacing="6">
        <Label text="Full Name"/>
        <TextField fx:id="nameField"/>
    </VBox>

    <VBox spacing="6">
        <Label text="New Password"/>
        <PasswordField fx:id="passwordField"/>
    </VBox>

    <VBox spacing="6">
        <Label text="Confirm Password"/>
        <PasswordField fx:id="confirmPasswordField"/>
    </VBox>

    <VBox spacing="6">
        <Label text="Profile Image"/>
        <HBox spacing="10">
            <TextField fx:id="imagePathField" editable="false" HBox.hgrow="ALWAYS"/>
            <Button text="Browse" onAction="#onBrowseImage"/>
        </HBox>
    </VBox>

    <Label fx:id="statusLabel" wrapText="true"/>

    <HBox spacing="15" alignment="CENTER">
        <Button text="Save" onAction="#onSave" styleClass="btn-save"/>
        <Button text="Cancel" onAction="#onCancel"/>
    </HBox>

</VBox>
