<?xml version="1.0" encoding="UTF-8"?>

<?import java.net.URL?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<VBox prefHeight="560.0" prefWidth="740.0" spacing="18.0"
      xmlns="http://javafx.com/javafx/23"
      xmlns:fx="http://javafx.com/fxml/1"
      fx:controller="files.Controllers.AssignCourseToTeacherController"
      styleClass="add-approval-root">

    <children>

        <Label fx:id="teacherNameLabel"
               text="Assign Courses to Teacher"
               textAlignment="CENTER"
               styleClass="form-title">
            <VBox.margin>
                <Insets bottom="6.0" left="25.0" right="25.0" top="18.0" />
            </VBox.margin>
        </Label>

        <!-- Search -->
        <TextField fx:id="searchField"
                   promptText="Search courses by ID or name..."
                   styleClass="search-field">
            <VBox.margin>
                <Insets left="25.0" right="25.0" />
            </VBox.margin>
        </TextField>

        <TableView fx:id="courseTable" prefHeight="320.0" VBox.vgrow="ALWAYS" styleClass="data-table">
            <columns>
                <TableColumn fx:id="courseIdCol" prefWidth="150.0" text="Course ID" styleClass="column-id" />
                <TableColumn fx:id="courseNameCol" prefWidth="380.0" text="Course Name" styleClass="column-name" />
                <TableColumn fx:id="courseCreditCol" prefWidth="120.0" text="Credit Hours" />
            </columns>

            <columnResizePolicy>
                <TableView fx:constant="CONSTRAINED_RESIZE_POLICY" />
            </columnResizePolicy>

            <VBox.margin>
                <Insets left="25.0" right="25.0" />
            </VBox.margin>
        </TableView>

        <!-- Status -->
        <Label fx:id="statusLabel" wrapText="true" styleClass="status-label">
            <VBox.margin>
                <Insets left="25.0" right="25.0" top="2.0" />
            </VBox.margin>
        </Label>

        <HBox alignment="CENTER" spacing="18.0">
            <children>

                <Button fx:id="approveButton"
                        prefWidth="170.0"
                        text="Assign Course"
                        styleClass="action-button blue-button" />

                <Button fx:id="cancelButton"
                        prefWidth="120.0"
                        text="Cancel"
                        styleClass="action-button grey-button" />

            </children>

            <VBox.margin>
                <Insets bottom="26.0" left="25.0" right="25.0" top="10.0" />
            </VBox.margin>
        </HBox>

    </children>

    <padding>
        <Insets bottom="18.0" left="18.0" right="18.0" top="18.0" />
    </padding>

    <stylesheets>
        <URL value="@../../css/admin-dashboard.css" />
    </stylesheets>

</VBox>
