<?xml version="1.0" encoding="UTF-8"?>

<?import java.net.URL?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<VBox prefHeight="500.0" prefWidth="900.0" spacing="25.0"
      xmlns="http://javafx.com/javafx/24.0.1"
      xmlns:fx="http://javafx.com/fxml/1"
      fx:controller="files.Controllers.ViewTeacherCoursesController"
      styleClass="add-approval-root"> <children>

    <Label fx:id="teacherNameLabel" textAlignment="CENTER" styleClass="form-title">
        <VBox.margin>
            <Insets bottom="10.0" left="25.0" right="25.0" top="20.0" />
        </VBox.margin>
    </Label>

    <HBox spacing="30.0" VBox.vgrow="ALWAYS">
        <children>
            <VBox spacing="15.0" HBox.hgrow="ALWAYS" styleClass="data-section">
                <children>
                    <Label text="Assigned Courses" textAlignment="CENTER" styleClass="section-title-small" />

                    <TableView fx:id="courseTable" prefHeight="300.0" VBox.vgrow="ALWAYS" styleClass="data-table">
                        <columns>
                            <TableColumn fx:id="colCourseID" prefWidth="120.0" text="Course ID" styleClass="column-id" />
                            <TableColumn fx:id="colCourseName" prefWidth="220.0" text="Course Name" styleClass="column-name" />
                            <TableColumn fx:id="colCredit" prefWidth="100.0" text="Credit Hours" />
                        </columns>
                        <columnResizePolicy>
                            <TableView fx:constant="CONSTRAINED_RESIZE_POLICY" />
                        </columnResizePolicy>
                    </TableView>
                </children>
                <padding>
                    <Insets top="15.0" right="15.0" bottom="15.0" left="15.0" />
                </padding>
            </VBox>

            <VBox spacing="15.0" HBox.hgrow="ALWAYS" styleClass="data-section">
                <children>
                    <Label text="Enrolled Students" textAlignment="CENTER" styleClass="section-title-small" />

                    <TableView fx:id="studentTable" prefHeight="300.0" VBox.vgrow="ALWAYS" styleClass="data-table">
                        <columns>
                            <TableColumn fx:id="colStudentID" prefWidth="120.0" text="Student ID" styleClass="column-id" />
                            <TableColumn fx:id="colStudentName" prefWidth="220.0" text="Student Name" styleClass="column-name" />
                        </columns>
                        <columnResizePolicy>
                            <TableView fx:constant="CONSTRAINED_RESIZE_POLICY" />
                        </columnResizePolicy>
                    </TableView>
                </children>
                <padding>
                    <Insets top="15.0" right="15.0" bottom="15.0" left="15.0" />
                </padding>
            </VBox>
        </children>
        <VBox.margin>
            <Insets left="25.0" right="25.0" />
        </VBox.margin>
    </HBox>
</children>

    <padding>
        <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
    </padding>

    <stylesheets>
        <URL value="@../../css/admin-dashboard.css" />
    </stylesheets>
</VBox>