<?xml version="1.0" encoding="UTF-8"?>

<?import java.net.URL?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<BorderPane prefHeight="750.0" prefWidth="1200.0"
            xmlns="http://javafx.com/javafx/23"
            xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="files.Controllers.CoursePageController"
            styleClass="teacher-dashboard-root">

    <stylesheets>
        <URL value="@../../css/TeacherDashboard.css"/>
    </stylesheets>

    <!-- TOP BAR -->
    <top>
        <HBox spacing="15" alignment="CENTER_LEFT" styleClass="top-bar">
            <padding>
                <Insets top="14" right="24" bottom="14" left="24"/>
            </padding>

            <Label text="Student Course Page" styleClass="header-title"/>
            <Region HBox.hgrow="ALWAYS"/>
            <Label fx:id="courseName" text="Course" styleClass="subtitle-label"/>
        </HBox>
    </top>

    <!-- LEFT SIDEBAR -->
    <left>
        <VBox spacing="14" styleClass="sidebar" prefWidth="240">
            <padding>
                <Insets top="22" right="16" bottom="22" left="16"/>
            </padding>

            <Label text="Menu" styleClass="sidebar-title"/>

            <Button fx:id="home" text="ðŸ  Home"
                    onAction="#onHome"
                    styleClass="nav-button"/>

            <Button fx:id="courses" text="ðŸ“š My Courses"
                    onAction="#Oncourses"
                    styleClass="nav-button"/>

            <Region VBox.vgrow="ALWAYS"/>

            <Button fx:id="logout" text="â† Logout"
                    onAction="#onLogout"
                    styleClass="action-button, red-button"/>
        </VBox>
    </left>

    <!-- CENTER -->
    <center>
        <ScrollPane fitToWidth="true" styleClass="clean-scroll">
            <content>
                <VBox spacing="18" styleClass="center-pane">
                    <padding>
                        <Insets top="28" right="28" bottom="28" left="28"/>
                    </padding>

                    <!-- HEADER CARD -->
                    <VBox spacing="10" styleClass="card">
                        <HBox spacing="12" alignment="CENTER_LEFT">
                            <Label fx:id="courseName" text="Course" styleClass="welcome-label"/>
                            <Region HBox.hgrow="ALWAYS"/>
                            <Label fx:id="creditLOabel" text="Total Credits: -" styleClass="muted-label"/>
                            <Button text="Refresh" onAction="#refreshAll" styleClass="action-button"/>
                        </HBox>
                        <Label text="Announcements, uploaded files, participants, and deadlines are shown below."
                               styleClass="muted-label"/>
                    </VBox>

                    <!-- ANNOUNCEMENTS CARD -->
                    <VBox spacing="12" styleClass="card">
                        <Label text="Announcements" styleClass="section-title"/>
                        <Label fx:id="announcementToggle"
                               text="ðŸ“¢ Show Announcements"
                               onMouseClicked="#toggleAnnouncements"
                               style="-fx-text-fill:#1e66d0; -fx-underline:true; -fx-font-weight:800;"/>

                        <VBox fx:id="announcementBox" spacing="10" managed="false" visible="false"/>
                    </VBox>

                    <!-- PARTICIPANTS CARD -->
                    <VBox spacing="12" styleClass="card">
                        <Label text="Participants" styleClass="section-title"/>
                        <TableView fx:id="participantsTable" prefHeight="240" styleClass="data-table">
                            <columns>
                                <TableColumn fx:id="studentIdColumn" text="Student ID" prefWidth="200"/>
                                <TableColumn fx:id="studentNameColumn" text="Name" prefWidth="600"/>
                            </columns>
                            <columnResizePolicy>
                                <TableView fx:constant="CONSTRAINED_RESIZE_POLICY"/>
                            </columnResizePolicy>
                        </TableView>
                    </VBox>

                    <!-- FILES CARD -->
                    <VBox spacing="12" styleClass="card">
                        <Label text="Uploaded Files" styleClass="section-title"/>
                        <VBox fx:id="fileListBox" spacing="10"/>
                    </VBox>

                    <!-- DEADLINES CARD -->
                    <VBox spacing="12" styleClass="card">
                        <Label text="Upcoming Deadlines" styleClass="section-title"/>
                        <VBox fx:id="deadlineContainer" spacing="10"/>
                    </VBox>

                </VBox>
            </content>
        </ScrollPane>
    </center>

</BorderPane>
