        <ImageView fx:id="profileImage" fitHeight="150" fitWidth="150">
            <image>
                <Image url="@../../default%20pp.jpg"/>
            </image>
        </ImageView>

        <Label fx:id="clockLabel"
               style="-fx-font-size:24px;-fx-font-weight:bold;"/>

        <HBox spacing="8">
