<?xml version="1.0" encoding="UTF-8"?>

<?import java.net.URL?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.Separator?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.Region?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Text?>

<BorderPane prefHeight="750.0" prefWidth="1200.0"
            xmlns="http://javafx.com/javafx/23.0.1"
            xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="files.Controllers.TeacherDashboardController"
            styleClass="teacher-dashboard-root">

    <stylesheets>
        <URL value="@../css/TeacherDashboard.css"/>
    </stylesheets>

    <!-- ===== TOP ===== -->
    <top>
        <VBox>
            <HBox spacing="15" alignment="CENTER_LEFT" styleClass="top-bar">
                <padding>
                    <Insets top="14" right="24" bottom="14" left="24"/>
                </padding>

                <Label text="Teacher Dashboard" styleClass="header-title"/>
                <Region HBox.hgrow="ALWAYS"/>
                <Label text="Course Management System - Teacher Panel" styleClass="subtitle-label"/>
            </HBox>

            <HBox spacing="25" alignment="CENTER_LEFT" styleClass="status-bar">
                <padding>
                    <Insets top="8" right="24" bottom="8" left="24"/>
                </padding>

                <Label fx:id="nameLabel" text="Teacher: -" styleClass="status-label"/>
                <Label fx:id="assignedCountLabel" text="Assigned Courses: 0" styleClass="status-label"/>
            </HBox>
        </VBox>
    </top>

    <!-- ===== LEFT ===== -->
    <left>
        <!-- âœ… prefWidth + fillWidth makes buttons stretch -->
        <VBox spacing="14" styleClass="sidebar" prefWidth="240" fillWidth="true">
            <padding>
                <Insets top="22" right="16" bottom="22" left="16"/>
            </padding>

            <Text text="Menu" styleClass="sidebar-title"/>

            <!-- âœ… all nav buttons -->
            <Button fx:id="homeButton" text="ðŸ  Home"
                    onAction="#onHomeClicked"
                    styleClass="nav-button"
                    maxWidth="Infinity"/>

            <Button fx:id="assignedCoursesButton" text="ðŸ“š Assigned Courses"
                    onAction="#onAssignedCoursesClicked"
                    styleClass="nav-button"
                    maxWidth="Infinity"/>

            <Button fx:id="requestsButton" text="ðŸ“ Course Requests"
                    onAction="#onRequestsClicked"
                    styleClass="nav-button"
                    maxWidth="Infinity"/>

            <Button fx:id="profileButton" text="ðŸ‘¤ My Profile"
                    onAction="#onProfileClicked"
                    styleClass="nav-button"
                    maxWidth="Infinity"/>

            <Region VBox.vgrow="ALWAYS"/>

            <!-- âœ… logout looks like others but red -->
            <Button fx:id="logoutButton" text="â† Logout"
                    onAction="#onLogout"
                    styleClass="nav-button danger"
                    maxWidth="Infinity"/>
        </VBox>
    </left>

    <!-- ===== CENTER ===== -->
    <center>
        <VBox fx:id="mainContentBox" alignment="TOP_CENTER" spacing="18" styleClass="center-pane">
            <padding>
                <Insets top="25" right="25" bottom="25" left="25"/>
            </padding>

            <VBox maxWidth="920" spacing="12" styleClass="card">
                <Label fx:id="welcomeLabel" text="Welcome, [Teacher Name]" styleClass="welcome-label"/>
                <Separator/>
                <Label text="Use the menu to view assigned courses, approve requests, and manage your profile."
                       styleClass="muted-label"/>
            </VBox>
        </VBox>
    </center>

</BorderPane>
