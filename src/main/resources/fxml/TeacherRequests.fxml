<?xml version="1.0" encoding="UTF-8"?>

<?import java.net.URL?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.Text?>

<BorderPane prefHeight="750.0" prefWidth="1200.0"
            xmlns="http://javafx.com/javafx/23"
            xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="files.Controllers.TeacherRequestsController"
            styleClass="teacher-dashboard-root">

    <stylesheets>
        <URL value="@../css/TeacherDashboard.css"/>
    </stylesheets>

    <!-- TOP BAR -->
    <top>
        <HBox spacing="15" alignment="CENTER_LEFT" styleClass="top-bar">
            <padding>
                <Insets top="14" right="24" bottom="14" left="24"/>
            </padding>

            <Label text="Course Requests" styleClass="header-title"/>
            <Region HBox.hgrow="ALWAYS"/>
            <Label fx:id="teacherNameTop" text="" styleClass="subtitle-label"/>
        </HBox>
    </top>

    <!-- LEFT SIDEBAR -->
    <left>
        <VBox spacing="14" styleClass="sidebar" prefWidth="240">
            <padding>
                <Insets top="22" right="16" bottom="22" left="16"/>
            </padding>

            <Text text="Menu" styleClass="sidebar-title"/>

            <Button fx:id="backButton"
                    text="⬅ Back"
                    onAction="#onBack"
                    styleClass="nav-button"/>

            <Region VBox.vgrow="ALWAYS"/>

            <Button fx:id="logoutButton"
                    text="← Logout"
                    onAction="#onLogout"
                    styleClass="action-button red-button"/>
        </VBox>
    </left>

    <!-- CENTER -->
    <center>
        <ScrollPane fitToWidth="true" styleClass="clean-scroll">
            <content>
                <VBox spacing="18" styleClass="center-pane">
                    <padding>
                        <Insets top="28" right="28" bottom="28" left="28"/>
                    </padding>

                    <HBox spacing="10" alignment="CENTER_LEFT">
                        <Label text="Pending Requests" styleClass="welcome-label"/>
                        <Region HBox.hgrow="ALWAYS"/>
                        <Button text="Refresh" onAction="#refresh" styleClass="action-button"/>
                    </HBox>

                    <Label fx:id="statusLabel" styleClass="status-label"/>

                    <VBox fx:id="requestsBox" spacing="12"/>
                </VBox>
            </content>
        </ScrollPane>
    </center>

</BorderPane>
